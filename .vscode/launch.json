  "version": "0.2.0",
  "configurations": [    
      {
          "name": "Launch Backend Service",
          "type": "go",
          "request": "launch",
          "mode": "auto",
          "program": "${workspaceFolder}/service/backend/main.go",
          "cwd": "${workspaceFolder}",
          "env": {},
          "args": [
              "-config=config/app.yml"
          ]
      },
      {
        "name": "Launch TimeScan Service",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "preLaunchTask": "Delay",
        "program": "${workspaceFolder}/service/timescan/main.go",
        "env": {},
        "args": ["-key=KanoDataPipe2020"],            
    }
  ],
  "compounds": [
      {
          "stopAll": true,
          "name": "Launch All Microservices",
          "configurations": [
              "Launch Backend Service",
              "Launch TimeScan Service"
          ]
      }
  ]
}
